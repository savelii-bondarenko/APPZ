@{
    Layout = "_Layout";
    ViewData["Title"] = "User Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header text-center bg-info text-white">
                    <h3>User Profile</h3>
                </div>
                <div class="card-body text-center">
                    <h4>@ViewData["FirstName"] @ViewData["LastName"]</h4>
                    <p class="text-muted">@ViewData["UserEmail"]</p>

                    <hr>

                    <div class="row">
                        <div class="col-6">
                            <p><strong>First Name:</strong></p>
                            <p>@ViewData["FirstName"]</p>
                        </div>
                        <div class="col-6">
                            <p><strong>Last Name:</strong></p>
                            <p>@ViewData["LastName"]</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-6">
                            <p><strong>Email:</strong></p>
                            <p>@ViewData["UserEmail"]</p>
                        </div>
                    </div>

                    <a href="#" class="btn btn-primary mt-3">Edit Profile</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Button to toggle the reserved rooms panel -->
    <div class="d-flex justify-content-center mt-4">
        <button class="btn btn-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#reservedRoomsPanel" aria-expanded="false" aria-controls="reservedRoomsPanel">
            <span class="bi bi-chevron-down" id="collapseIcon"></span> My Reserved Rooms
        </button>
    </div>

    <!-- Collapsible panel for reserved rooms -->
    <div class="collapse" id="reservedRoomsPanel">
        <div class="card mt-3">
            <div class="card-body">
                <h5>Reserved Rooms</h5>
                <ul>
                    <li>Room 1: Deluxe Suite</li>
                    <li>Room 2: Standard Room</li>
                    <li>Room 3: Executive Room</li>
                </ul>
                <a asp-action="Index" asp-controller="Room" class="btn btn-info mt-3">Watch All Rooms</a>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
    }

    .card-header {
        border-radius: 15px 15px 0 0;
    }

    .btn-primary {
        width: 100%;
    }

    .btn-info {
        width: 100%;
    }

    .card-body {
        font-size: 1.1rem;
    }

    /* Icon for collapse */
    .bi-chevron-down {
        font-size: 1.2rem;
        transition: transform 0.3s ease;
    }

    /* Rotate the icon when the panel is open */
    .collapse.show + .d-flex button .bi-chevron-down {
        transform: rotate(180deg);
    }
</style>

<!-- Bootstrap 5 JS (for collapse functionality) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
