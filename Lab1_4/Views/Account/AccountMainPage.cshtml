@{
    Layout = "_Layout";
    ViewData["Title"] = "Account Main Page";
}

<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>

    <div class="alert alert-success mt-4">
        <h4>Welcome, @Model.FirstName @Model.LastName!</h4>
        <p>Here you can manage your account details.</p>
    </div>

    <div class="card">
        <div class="card-header">
            <h5>Account Details</h5>
        </div>
        <div class="card-body">
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>First Name:</strong> @Model.FirstName</p>
            <p><strong>Last Name:</strong> @Model.LastName</p>
            <a href="/Account/Edit" class="btn btn-primary">Edit Account</a>
        </div>
    </div>

    <div class="mt-4">
        <a href="/Account/Logout" class="btn btn-danger">Logout</a>
    </div>
</div>